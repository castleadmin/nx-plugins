{
  "$schema": "http://json-schema.org/schema",
  "$id": "Service",
  "title": "Serverless Terraform Service Generator",
  "type": "object",
  "properties": {
    "serviceName": {
      "type": "string",
      "description": "Service Name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What service name would you like to use?"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["serviceName"],
  "additionalProperties": false
}
