{
  "$schema": "http://json-schema.org/schema",
  "$id": "cdk-lib",
  "title": "cdk-lib",
  "description": "Creates an AWS CDK constructs library.",
  "type": "object",
  "properties": {
    "libName": {
      "type": "string",
      "pattern": "^[A-Za-z_][A-Za-z0-9_\\-]*$",
      "description": "Constructs library name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the newly generated constructs library?"
    },
    "importPath": {
      "type": "string",
      "description": "Define the npm package name (e.g. 'example-lib' or '@example-org/example-lib')."
    },
    "publishable": {
      "type": "boolean",
      "description": "Create a publishable library.",
      "x-priority": "important"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["libName"],
  "additionalProperties": false
}
