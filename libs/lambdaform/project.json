{
  "name": "lambdaform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/lambdaform/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/lambdaform",
        "main": "libs/lambdaform/src/index.ts",
        "tsConfig": "libs/lambdaform/tsconfig.lib.json",
        "assets": [
          "libs/lambdaform/*.md",
          {
            "input": "./libs/lambdaform/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/lambdaform/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/lambdaform",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/lambdaform",
            "glob": "executors.json",
            "output": "."
          }
        ],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs lambdaform {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/lambdaform/**/*.ts",
          "libs/lambdaform/package.json",
          "libs/lambdaform/generators.json",
          "libs/lambdaform/executors.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/lambdaform/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
