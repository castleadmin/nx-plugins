{
  "$schema": "http://json-schema.org/schema",
  "$id": "Service",
  "title": "lambda-cloud service generator",
  "type": "object",
  "properties": {
    "serviceName": {
      "type": "string",
      "pattern": "^[A-Za-z_][A-Za-z0-9_\\-]*$",
      "description": "Define the service name.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What service name would you like to use?"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["serviceName"],
  "additionalProperties": false
}
