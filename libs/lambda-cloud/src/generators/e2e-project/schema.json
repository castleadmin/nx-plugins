{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "LambdaCloudE2EProject",
  "title": "lambda-cloud E2E Project Generator",
  "description": "Generate an E2E project for a lambda-cloud application.",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": { "$source": "argv", "index": 0 },
      "x-dropdown": "project",
      "x-prompt": "What project is this for?"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false,
      "hidden": true,
      "x-priority": "internal"
    }
  },
  "required": ["project"],
  "additionalProperties": false
}
