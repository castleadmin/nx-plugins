{
  "name": "lambda-cloud",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/lambda-cloud/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/lambda-cloud",
        "main": "libs/lambda-cloud/src/index.ts",
        "tsConfig": "libs/lambda-cloud/tsconfig.lib.json",
        "assets": [
          "libs/lambda-cloud/*.md",
          {
            "input": "./libs/lambda-cloud/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/lambda-cloud/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/lambda-cloud",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/lambda-cloud",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs lambda-cloud {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/lambda-cloud/**/*.ts",
          "libs/lambda-cloud/package.json",
          "libs/lambda-cloud/generators.json",
          "libs/lambda-cloud/executors.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/lambda-cloud/jest.config.ts"
      }
    }
  },
  "tags": []
}
