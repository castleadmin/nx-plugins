{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= offset %>dist/out-tsc",
    "module": "commonjs",
    "target": "es2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "importHelpers": true
  },
  "include": ["cdk/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "cdk/**/*.spec.ts",
    "cdk/**/*.test.ts"
  ]
}
